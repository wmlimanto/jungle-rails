<section class="signup-form">
  <h2>Sign In</h2>

  <%= form_for :session, url: '/login' do |f| %>

    <div class="form-fields">
      <%= f.text_field :email, placeholder: "Email" %>
    </div>

    <div class="form-fields">
      <%= f.password_field :password, placeholder: "Password" %>
    </div>

    <div class="form-fields-submit">
      <%= f.submit "Submit" %>
    </div>

  <% end %>
</section>